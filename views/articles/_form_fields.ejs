<form method="POST" action="/articles"> <!-- Add a form element and set the method and action attributes -->
    <div class="form-group mt-3">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control" value="<%= article.title %>"> <!-- Fix the id attribute -->
    </div>

    <div class="form-group mt-3">
        <label for="description">Description</label>
        <textarea name="description" id="description" class="form-control"><%= article.description %></textarea> <!-- Add a closing tag for textarea -->
    </div>

    <div class="form-group mt-3">
        <label for="markdown">Markdown</label>
        <textarea required name="markdown"  id="markdown" class="form-control"><%= article.markdown %></textarea> <!-- Add a closing tag for textarea -->
    </div>

    <a href="/" class="btn btn-secondary mt-3">Cancel</a>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
